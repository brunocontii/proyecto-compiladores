program {

    integer pow(integer x, integer y) {
        integer z = x;
        integer w = y;

        if (x == 0) then {
            return 0;
        }

        if (y == 0) then {
            return 1;
        }

        if (y == 1) then {
            return x;
        }

        while (w > 1) {
            z = z * x;
            w = w - 1;
        }

        return z;
    }

    void print_int(integer x) extern;
    void print_bool(bool a) extern;

    void main() {
        integer x = pow(3,3);
        if (x == 27) then{
            print_bool(true);
            print_int(x);
        } else {
            print_bool(false);
            print_int(x);
        }
    }
}